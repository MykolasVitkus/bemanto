{% extends 'base.html.twig' %}

{% block title %} {{ pageTitle }} {% endblock %}

{% block stylesheets %}

    {{ encore_entry_link_tags('user_settings') }}

{% endblock %}

{% block body %}

<script>showBlock(0);</script>

<div class="container col-sm-8 mt-5 bg-white">
    <div class="row border rounded-top p-2">
        <div class="col">
            <big>Nustatymai</big><br>
            Tvarkykite savo paskyros nustatymus
        </div>
    </div>
    <div class="row border border-top-0 rounded-bottom p-3">
        <div class="col-xs-12 col-md-4 mb-2">
            <ul class="ul-menu">
                <li class="li-menu"><a href={{ path('app_userSettings') }}{# id="menu-item" #} {% if blockToShow == 0 %} class="active" {% endif %}><i class="fas fa-eye fa-lg mr-3 mt-1"></i> Apžvalga</a></li>
                <li class="li-menu"><a href={{ path('app_changePassword') }}{# id="menu-item" #} {% if blockToShow == 1 %} class="active" {% endif %}><i class="fas fa-key fa-lg mr-3 mt-1"></i> Slaptažodžio keitimas</a></li>
                <li class="li-menu"><a href={{ path('app_changeEmail') }}{# id="menu-item" #} {% if blockToShow == 2 %} class="active" {% endif %}><i class="fas fa-envelope fa-lg mr-3 mt-1"></i> El. pašto adreso keitimas</a></li>
            </ul>
        </div>
        <div class="col-xs-12 col-md-8 border rounded-lg p-4">

            {% if blockToShow == 0 %}

                <div id="info-block">
                    Pirmas blockas
                </div>

            {% elseif blockToShow == 1 %}

                <div id="info-block">

                    {% if errorMessage %}

                        <div class="alert alert-{{ errorType }}">
                            {{ errorMessage }}
                        </div>

                    {% endif %}

                    {{ form_start(changePasswordForm) }}

                        {{ form_row(changePasswordForm.currentpw) }}
                        
                        <div>
                        {{ form_row(changePasswordForm.newpw.first) }}
                        </div>
                        {{ form_row(changePasswordForm.newpw.second) }}
                        <p>
                        <div class="text-center">
                            <button class="btn btn-primary" type="submit">Keisti slaptažodį</button> 
                        </div>

                    {{ form_end(changePasswordForm) }}

                </div>

            {% elseif blockToShow == 2 %}

                <div id="info-block">
                    Trecias blokas
                </div>

            {% endif %}

            {# <div id="info-block" {% if blockToShow != 0 %}class="hide"{% endif %}>
                Pirmas blockas
            </div>
            <div id="info-block" {% if blockToShow != 1 %}class="hide"{% endif %}>
                {% if errorMessage %}

                    <div class="alert alert-{{ errorType }}">
                        {{ errorMessage }}
                    </div>

                {% endif %}

                {{ form_start(changePasswordForm) }}

                    {{ form_row(changePasswordForm.currentpw) }}
                    
                    <div>
                    {{ form_row(changePasswordForm.newpw.first) }}
                    </div>
                    {{ form_row(changePasswordForm.newpw.second) }}
                    <p>
                    <div class="text-center">
                        <button class="btn btn-primary" type="submit">Change Password</button> 
                    </div>
                {{ form_end(changePasswordForm) }}
            </div>
            <div id="info-block" {% if blockToShow != 2 %}class="hide"{% endif %}>
                Trecias blokas
            </div> #}
        </div>
    </div>
</div>

{% endblock %}

