{% extends 'base.html.twig' %}
{% block title %}
    <small>Log into</small>
    bemanto{% endblock %}
{% block body %}
    <form method="post">
        {% if error %}
            <div class="alert alert-danger alert-dismissible fade show col-5" id="errorMsg" role="alert">
                <button class="close" data-dismiss="alert" type="button">&times;</button>
                {{ error.messageKey|trans(error.messageData, 'security') }}
            </div>
        {% endif %}
        <h1 class="h3 mb-3 font-weight-normal">Please sign in</h1>
        <label class="sr-only" for="inputEmail">Email</label>
        <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" placeholder="Email" required autofocus>
            <label class="sr-only" for="inputPassword">Password</label>
            <input class="form-control" id="inputPassword" name="password" placeholder="Password" required type="password">
                <input
                    type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                    
                            <div class="checkbox mb-3">
                                <label>
                                    <input type="checkbox" name="_remember_me"> Remember me
                                </label>    
                            </div>
                        
                    <button class="btn btn-lg btn-primary" type="submit">
                        Sign in
                    </button>
                </form>
            {% endblock %}
        