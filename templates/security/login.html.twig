{% extends 'base.html.twig' %}
{% block title %}Prisijungimas{% endblock %}
{% block body %}
    <form method="post" class="container col-sm-4">

        <div class="jumbotron text-center">
            <h1><small>Prisijunkite į</small> bemanto</h1>
        </div>
        {% if error %}
            <div class="alert alert-danger alert-dismissible fade show" id="errorMsg" role="alert">
                <button class="close" data-dismiss="alert" type="button">&times;</button>
                {{ error.messageKey|trans(error.messageData, 'security') }}
            </div>
        {% endif %}
            <div class="form-group text-left">
                <label for="inputEmail">El. paštas</label>
                <input type="email" name="email" class="form-control" id="inputEmail" value="{{ last_username }}" placeholder="vardenis.vytenis@one.lt"></div>
            </div>
            <div class="form-group text-left">
                <label for="inputPassword">Slaptažodis</label>
                <input class="form-control" id="inputPassword" name="password" placeholder="Slaptažodis" required type="password">
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">   
            </div>
            <input type="checkbox" id="remember_me" name="_remember_me" checked />
            <label for="remember_me">Palikite mane prisijungusį</label>
            <div class="text-center">
                <button class="btn btn-primary" type="submit">Patvirtinti</button>
                <a href={{ '/register' }}><button class="btn btn-secondary" type="button">Registruotis</button></a>

                {% if error %}
                    <div class="mt-3">
                        <a href={{ path('password_reset') }}>Pamiršote savo slaptažodį? Neišsigąskite</a>
                    </div>
                {% endif %}
                
            </div>
</form>
{% endblock %}
        