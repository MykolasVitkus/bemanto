{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <div class="jumbotron text-center">
            <h1><small>Register into</small> bemanto</h1>
        </div>

<div class="container col-sm-4">
    {{ form_start(registrationForm) }}

        <div class="mt-2 mb-2">
        {{ form_row(registrationForm.email) }}
        </div>
        <div class="mt-2 mb-2">
        {{ form_row(registrationForm.password.first) }}
        </div>
        <div class="mt-2 mb-2">
        {{ form_row(registrationForm.password.second) }}
        </div>
        <div class="text-center pt-2">
            <button class="btn btn-primary" type="submit">Register</button> 
        </div>
    {{ form_end(registrationForm) }}

    <span class="text-center"><p class="mt-2">Already have an account? <a href={{ '/login' }}>Login here</a></span>
    </div>
{% endblock %}
