{% extends 'base.html.twig' %}

{% block title %}Hello User deletion{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1 style='text-align:center;padding-bottom: 5%'>User deletion panel</h1>
</div>
 

<table class="table">
  <thead>
    <tr>
      <th style="width: 5%" scope="col"><b>ID</b></th>
      <th style="width: 10%" scope="col">Email</th>  
      <th style="width: 5%" scope="col"></th>
    
    </tr>
  </thead>
  <tbody>
 
    {% for user in usersArray %}
      <tr id='{{ user.ID|e }}'>
        <td>{{ user.ID|e }}</td>
        <td>{{ user.Email|e }}</td>
        <td>    <a href="{{ path('admin_deleteuser', {'id': user.ID|e }) }}"> <button type="button" id='button{{ user.ID|e }}' onclick='DeleteUser(this.id)' class="btn btn-danger">Delete</button></td></a>
    
        </tr>
    {% endfor %}

  </tbody>
</table>



<style>


</style>

<script>

function DeleteUser(id)
{
   document.getElementById(id).parentElement.parentElement.innerHTML='';  
}

</script>


{% endblock %}
